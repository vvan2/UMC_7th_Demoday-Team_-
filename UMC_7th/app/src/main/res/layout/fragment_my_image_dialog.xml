<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    android:src="@drawable/sub_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_32"
            android:fontFamily="@font/pretendard_bold"
            android:text="이미지를 선택해주세요 !"
            android:textAlignment="center"
            android:textColor="@color/Primary_Orange1"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/profilechange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_medium"
            android:hint="파일입력"

            android:textAlignment="center"
            android:textColor="@color/Gray4" />

<!--        <TextView-->
<!--            android:id="@+id/tvSelectFile"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:fontFamily="@font/pretendard_medium"-->
<!--            android:text="파일선택"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/Gray4" />-->

        <LinearLayout
            android:layout_marginTop="@dimen/spacing_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_48"
            android:layout_marginRight="@dimen/spacing_32"
            android:orientation="horizontal"
         >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:backgroundTint="@color/Gray7"
                android:layout_height="wrap_content"
                android:text="취소"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_marginLeft="40sp"
                android:layout_width="100dp"
                android:backgroundTint="@color/Primary_Orange1"
                android:layout_height="wrap_content"

                android:text="변경"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>