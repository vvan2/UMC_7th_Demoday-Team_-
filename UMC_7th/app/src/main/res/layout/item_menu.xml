<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:foreground="@drawable/card_background_selector"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/iv_menu_image"
                android:background="@drawable/img_sample"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="3dp"
                android:padding="6dp"
                android:src="@drawable/ic_refresh"
                android:backgroundTint="@color/transparent"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="계란후라이, 토스트, 바나나"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/Gray3"/>

            <TextView
                android:id="@+id/tv_menu_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="560Kcal"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/Gray2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_filled"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_diet_complete"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:backgroundTint="@color/Gray7"
                    android:fontFamily="@font/pretendard_semibold"
                    android:padding="1dp"
                    android:text="식단 완료"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>