<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="1dp" />
            <solid android:color="#12D4D8DC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <solid android:color="#0DD4D8DC" />
        </shape>
    </item>
    <!-- Background (맨 위에 올 실제 뷰의 배경) -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/radius_box"/>
        </shape>
    </item>
</layer-list>