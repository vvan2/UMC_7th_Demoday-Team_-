<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 효과 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D4D8DC"/> <!-- 그림자 색상 -->
            <corners android:radius="10dp"/> <!-- 모서리 둥글게 -->
        </shape>
    </item>

    <!-- 카드 배경 -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 카드 배경 -->
            <stroke android:width="0.5dp" android:color="#D4D8DC"/> <!-- 테두리 색상 -->
            <corners android:radius="10dp"/> <!-- 모서리 둥글게 -->
        </shape>
    </item>
</layer-list>
