<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경색 -->
    <item>
        <shape>
            <solid android:color="@color/Primary_Orange1" />
        </shape>
    </item>

    <!-- 우측 상단 -->
    <item android:right="20dp" android:top="20dp">
        <rotate android:fromDegrees="15">
            <bitmap android:src="@drawable/ic_star_filled" />
        </rotate>
    </item>

    <!-- 좌측 중간 -->
    <item android:left="30dp" android:top="100dp">
        <rotate android:fromDegrees="-10">
            <bitmap android:src="@drawable/ic_star_filled" />
        </rotate>
    </item>

    <!-- 중앙 -->
    <item android:left="150dp" android:top="80dp">
        <rotate android:fromDegrees="25">
            <bitmap android:src="@drawable/ic_star_filled" />
        </rotate>
    </item>
</layer-list>