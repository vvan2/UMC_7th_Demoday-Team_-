<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <!-- Base TextAppearance style -->
        <style name="TextAppearance.Base" parent="">
            <item name="android:letterSpacing">-0.06</item>
            <item name="android:includeFontPadding">false</item>
        </style>

        <!-- Regular Style (11-12sp) -->
        <style name="TextAppearance.Regular" parent="TextAppearance.Base">
            <item name="android:textSize">11sp</item>
            <item name="android:fontFamily">@font/pretendard_regular</item>
        </style>

        <!-- Regular Style Alternative -->
        <style name="TextAppearance.Regular.Alt" parent="TextAppearance.Regular">
            <item name="android:textSize">12sp</item>
        </style>

        <!-- Medium Style (14sp) -->
        <style name="TextAppearance.Medium" parent="TextAppearance.Base">
            <item name="android:textSize">14sp</item>
            <item name="android:fontFamily">@font/pretendard_medium</item>
        </style>

        <!-- SemiBold Style (16-18sp) -->
        <style name="TextAppearance.SemiBold" parent="TextAppearance.Base">
            <item name="android:textSize">16sp</item>
            <item name="android:fontFamily">@font/pretendard_semibold</item>
        </style>

        <style name="TextAppearance.SemiBold.Large" parent="TextAppearance.SemiBold">
            <item name="android:textSize">18sp</item>
        </style>

        <!-- Bold Style (20-22sp) -->
        <style name="TextAppearance.Bold" parent="TextAppearance.Base">
            <item name="android:textSize">20sp</item>
            <item name="android:fontFamily">@font/pretendard_bold</item>
        </style>

        <style name="TextAppearance.Bold.Large" parent="TextAppearance.Bold">
            <item name="android:textSize">22sp</item>
        </style>

        <!-- Jalnan2 Style -->
        <style name="TextAppearance.Jalnan2" parent="TextAppearance.Base">
            <item name="android:fontFamily">@font/jalnan_2</item>
        </style>
    </resources>
